{
  "name": "mineshare-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "MineShare - Privacy-First Data Collection & Marketplace",
  "repository": {
    "type": "git",
    "url": "https://github.com/sspirial/MineShare.git"
  },
  "scripts": {
    "dev": "pnpm run dev:all",
    "dev:all": "concurrently \"pnpm --filter mineshare run build:watch\" \"pnpm --filter mineshare-marketplace-dapp run dev\"",
    "dev:ui": "pnpm --filter mineshare run build:watch",
    "dev:dapp": "pnpm --filter mineshare-marketplace-dapp run dev",
    "build": "pnpm run build:all",
    "build:all": "pnpm --filter mineshare run build && pnpm --filter mineshare-marketplace-dapp run build",
    "build:ui": "pnpm --filter mineshare run build",
    "build:dapp": "pnpm --filter mineshare-marketplace-dapp run build",
    "build:contracts": "cd move/mineshare && sui move build",
    "clean": "pnpm run clean:all",
    "clean:all": "pnpm --filter mineshare run clean && pnpm --filter mineshare-marketplace-dapp run clean && pnpm run clean:contracts",
    "clean:ui": "pnpm --filter mineshare run clean",
    "clean:dapp": "pnpm --filter mineshare-marketplace-dapp run clean || rm -rf dapp/dist",
    "clean:contracts": "cd move/mineshare && rm -rf build",
    "install:all": "pnpm install -r",
    "test:contracts": "cd move/mineshare && sui move test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
